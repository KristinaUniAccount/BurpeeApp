<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg2"
    tools:context="com.example.kristinah.burpeeapp.ActivityYellowButton3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:id="@+id/frameLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:src="@drawable/titelhowto"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="10dp" />

        <ImageButton
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/backtomenu3"
            android:layout_gravity="left|top"
            android:src="@drawable/backtomenu"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:clickable="true"
            android:onClick="backtomenu3"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frameLayout">

        <TextView
            android:layout_width="269dp"
            android:layout_height="270dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/textgelbHinweise"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textColor="#ff0d5ca0"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/threeofthree"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ff000000"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="234dp"
            android:layout_height="65dp"
            android:layout_gravity="bottom|right">

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="33dp"
                android:id="@+id/back3"
                android:src="@drawable/back"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:clickable="true"
                android:onClick="back3"/>

        </LinearLayout>

    </FrameLayout>


</RelativeLayout>
