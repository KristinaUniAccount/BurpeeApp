<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bggrey"
    tools:context="com.example.kristinah.burpeeapp.ActivityGreenButton2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:id="@+id/frameLayout">

        <ImageView
            android:layout_width="224dp"
            android:layout_height="131dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:src="@drawable/counter"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="10dp" />

        <ImageButton
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/backtomenu1"
            android:layout_gravity="left|top"
            android:src="@drawable/backtomenu"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:clickable="true"
            android:onClick="backtomenu1"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frameLayout">

        <TextView
            android:layout_width="285dp"
            android:layout_height="181dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/textgruen"
            android:id="@+id/gruenEinfuehrung"
            android:layout_gravity="center_horizontal|top"
            android:paddingTop="60dp"
            android:textColor="#ffcfefff"
            android:gravity="center_horizontal" />

        <FrameLayout
            android:layout_width="178dp"
            android:layout_height="115dp"
            android:layout_gravity="left|bottom">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="43dp"
                android:id="@+id/imageButton"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/send"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:clickable="true"
                android:onClick="senddata"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="157dp"
            android:layout_height="115dp"
            android:layout_gravity="right|bottom">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonreset"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/reset"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:clickable="true"
                android:onClick="resetdata"/>
        </FrameLayout>

    </FrameLayout>

</RelativeLayout>
